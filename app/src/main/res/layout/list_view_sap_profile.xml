<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvViewSapSubCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/colorText2"
            android:textSize="15sp"
            tools:text="Functional" />


        <TextView
            android:id="@+id/tvViewSapSubSubCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/colorText2"
            android:textSize="15sp"
            tools:text="SOLUTION MANAGER" />


        <TextView
            android:id="@+id/tvViewSapExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/colorText2"
            android:textSize="15sp"
            tools:text="1 Year 1 Month" />


        <TextView
            android:id="@+id/tvViewSapInterested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/colorText2"
            android:textSize="15sp"
            tools:text="2 Interested" />

        <Button
            android:id="@+id/btnEditViewSapProf"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_pencil" />
    </TableRow>
</LinearLayout>