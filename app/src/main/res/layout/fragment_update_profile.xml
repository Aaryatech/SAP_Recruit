<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ats.sap_recruitment.fragment.UpdateProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@mipmap/profile_back"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/person" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Anand Patil"
                    android:textAlignment="center"
                    android:textColor="@color/colorText2" />

                <TextView
                    android:id="@+id/tvProfileDegree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Qualification: M. Tech"
                    android:textAlignment="center"
                    android:textColor="@color/colorText2" />

                <TextView
                    android:id="@+id/tvProfileExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="Experience: 2 Years"
                    android:textAlignment="center"
                    android:textColor="@color/colorText2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnPersonalProfile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:background="@mipmap/icon_pencil" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLabelPersonalPro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Personal Profile"
                        android:textColor="@color/colorText2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/icon_score"
                        android:gravity="center"
                        android:text="84%"
                        android:textAlignment="center"
                        android:textColor="@color/colorText2"
                        android:textSize="15sp" />

                    <!--<com.ats.sap_recruitment.utils.CircleDisplay
                        android:id="@+id/circleDisplayPersonal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="end" />-->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEducationalProfile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:background="@mipmap/icon_pencil" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLabelEduPro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Educational Profile"
                        android:textColor="@color/colorText2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/icon_score"
                        android:gravity="center"
                        android:text="84%"
                        android:textAlignment="center"
                        android:textColor="@color/colorText2"
                        android:textSize="15sp" />


                    <!-- <com.ats.sap_recruitment.utils.CircleDisplay
                         android:id="@+id/circleDisplayEducation"
                         android:layout_width="80dp"
                         android:layout_height="80dp"
                         android:layout_gravity="end" />-->

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabelSAP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAP Specialization"
                    android:textColor="@color/colorText2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvLabelSAPText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note: Strictly enter valid information as per your SAP specialization"
                    android:textColor="@color/colorText2" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llUpdateBasis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvLabelBasis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="BASIS"
                        android:textColor="@color/colorText2"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnEditBasis"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:background="@mipmap/icon_pencil" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLsvBasis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/lsvBasis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUpdateAbap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvLabelAbap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="ABAP"
                        android:textColor="@color/colorText2"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnEditABAP"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:background="@mipmap/icon_pencil" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLsvABAP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/lsvABAP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llUpdateFunctional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvLabelFunctional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Functional"
                        android:textColor="@color/colorText2"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnEditFunctional"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:background="@mipmap/icon_pencil" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLsvFuctional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/lsvFunctional"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewSapProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabelViewSAP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View SAP Profile"
                    android:textColor="@color/colorText2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvLabelViewSAPText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click here check Save SAP Profile"
                    android:textColor="@color/colorText2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLsvViewSAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rclVeiwSap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
