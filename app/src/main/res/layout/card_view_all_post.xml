<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvViewAllJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experienc SAP developer"
                        android:layout_weight="1"
                        android:textColor="@color/color_bg_confirm"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_card_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="16dp"
                        android:text="&#8942;"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="12"
                        android:textAppearance="?android:textAppearanceLarge" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvViewAllJobId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_id_no"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="111"
                    android:textColor="@color/colorText2"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvViewAllJobType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_access_time"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="Full Time"
                    android:textColor="@color/colorText2"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvViewAllLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="Pune"
                    android:textColor="@color/colorText2"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvViewAllJobYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_work_duration"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="1-2 Year"
                    android:textColor="@color/colorText2"
                    android:textSize="15sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>